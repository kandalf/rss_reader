%ul.nav-bar
  %li
    %button#subscribe-btn.btn.btn-primary= t('Subscribe')
  %li#subscriptions
    %h5= t('My Subscriptions')
    %ul.small
      - @subscriptions.each do |sub|
        %li.subscription-title
          = link_to sub.title, subscription_path(sub), :remote => true, :class => 'subscription-link', :data => { :id => sub.id }
